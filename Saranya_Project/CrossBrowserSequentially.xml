<!-- Cross Browser testing Sequentially-->
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Suite">
	<test thread-count="1" name="All Tests in Chrome">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="testCases.TC01_UIElementsValidation"/>
			<class name="testCases.TC02_URLTitlePlaceHolder"/>
			<class name="testCases.TC03_AboutLink"/>
			<class name="testCases.TC04_FactorialCheckWDataDriven"/>
		</classes>
	</test>
	
		<test thread-count="1" name="All Tests in Firefox">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="testCases.TC01_UIElementsValidation"/>
			<class name="testCases.TC02_URLTitlePlaceHolder"/>
			<class name="testCases.TC03_AboutLink"/>
			<class name="testCases.TC04_FactorialCheckWDataDriven"/>
		</classes>
	</test>
	
</suite>